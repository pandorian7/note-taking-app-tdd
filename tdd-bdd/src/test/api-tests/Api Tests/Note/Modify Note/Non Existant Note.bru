meta {
  name: Non Existant Note
  type: http
  seq: 5
}

put {
  url: http://localhost:8081/notes/999999
  body: json
  auth: inherit
}

body:json {
  {
    "title": "Note Title Modified",
    "content": "Note Content Modified"
  }
}

tests {
  test("should return 404 for non existant note", function () {
    const status = res.getStatus();
    const body = res.getBody();
  
    expect(status).to.equal(404);
    expect(body.code).to.equal("NoteDoesNotExistException");
  });
  
}

settings {
  encodeUrl: true
}
