meta {
  name: First Name Missing
  type: http
  seq: 3
}

post {
  url: {{baseURL}}/auth/signup
  body: json
  auth: inherit
}

body:json {
  {
    "username":"user123",
    "password":"Hello@123",
    
    "lastName": "Last"
  }
}

tests {
  test("should return 400 for missing firstname", function () {
    const status = res.getStatus();
    const body = res.getBody();
  
    expect(status).to.equal(400);
    expect(body.code).to.equal("REQUIRED_ARGUMENT_MISSING");
    expect(body.field).to.equal("firstName");
  });
  
}
