meta {
  name: Username Missing
  type: http
  seq: 1
}

post {
  url: {{baseURL}}/auth/signup
  body: json
  auth: inherit
}

body:json {
  {
    
    "password":"Hello@123",
    "firstName": "First", 
    "lastName": "Last"
  }
}

tests {
  test("should return 400 for missing username", function () {
    const status = res.getStatus();
    const body = res.getBody();
  
    expect(status).to.equal(400);
    expect(body.code).to.equal("REQUIRED_ARGUMENT_MISSING");
    expect(body.field).to.equal("username");
  });
  
}
