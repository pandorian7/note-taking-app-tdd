meta {
  name: Last Name Missing
  type: http
  seq: 4
}

post {
  url: {{baseURL}}/auth/signup
  body: json
  auth: inherit
}

body:json {
  {
    "username":"user123",
    "password":"Hello@123",
    "firstName": "First"
  
  }
}

tests {
  test("should return 400 for missing lastname", function () {
    const status = res.getStatus();
    const body = res.getBody();
  
    expect(status).to.equal(400);
    expect(body.code).to.equal("REQUIRED_ARGUMENT_MISSING");
    expect(body.field).to.equal("lastName");
  });
  
}
