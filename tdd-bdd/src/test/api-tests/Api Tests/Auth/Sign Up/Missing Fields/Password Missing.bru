meta {
  name: Password Missing
  type: http
  seq: 2
}

post {
  url: {{baseURL}}/auth/signup
  body: json
  auth: inherit
}

body:json {
  {
    "username":"user123",
  
    "firstName": "First", 
    "lastName": "Last"
  }
}

tests {
  test("should return 400 for missing password", function () {
    const status = res.getStatus();
    const body = res.getBody();
  
    expect(status).to.equal(400);
    expect(body.code).to.equal("REQUIRED_ARGUMENT_MISSING");
    expect(body.field).to.equal("password");
  });
  
}
