tests {
  test("should handle user creation correctly", function () {
    const status = res.getStatus();
    const body = res.getBody();
  
    expect(
      status === 201 ||
      (status === 409 && body.code === "UserAlreadyExistsException")
    ).to.be.true;
  
    if (status === 409 && body.code === "UserAlreadyExistsException") {
      console.warn("User already exists (warning).");
    }
  });
  
}
